{
  "id": "vc-core",
  "version": "1.0.0",
  "typography": {
    "max_font_sizes": 4,
    "roles": [
      { "name": "display", "min": 48, "max": 64 },
      { "name": "heading", "min": 32, "max": 48 },
      { "name": "body", "min": 14, "max": 20 }
    ],
    "hierarchy": ["display", "heading", "body"]
  },
  "spacing": {
    "allowed_values": [4, 8, 12, 16, 24, 32],
    "max_variance": 20
  },
  "color": {
    "allowed_tokens": ["color.primary", "color.secondary", "color.background", "color.text"],
    "contrast_floor": 4.5
  },
  "density": {
    "max_interactions_per_view": 12
  },
  "consistency": {
    "radius": { "allowed_values": [4, 8, 12], "max_variance": 8 },
    "elevation": { "allowed_values": [0, 1, 2], "max_variance": 2 },
    "motion": { "allowed_values": ["none", "micro", "macro"], "max_variance": 0 }
  },
  "patterns": {
    "allowed": ["hero.section", "cta.button"],
    "intents": {
      "hero.section": ["landing", "marketing"],
      "cta.button": ["acquisition", "engagement"]
    }
  }
}
